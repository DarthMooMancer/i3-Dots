#i3 config file (v4)
set $mod Mod4
set $term kitty

font pango: JetBrainsMono Nerd Font 8
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

for_window [class="^.*"] border pixel 0
gaps inner 5
gaps outer 0

# set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 5%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 5%-
bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle

bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

floating_modifier $mod

tiling_drag modifier titlebar

bindsym $mod+Return exec $term
bindsym $mod+q kill
bindsym $mod+Shift+c exec ~/.config/rofi/powermenu/type-2/powermenu.sh
bindsym $mod+p exec ~/.config/rofi/launchers/type-2/launcher.sh

# Change the Focused Window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move Focused Window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
floating_maximum_size 1200 x 900
# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+Shift+a focus parent

set $ws1 "1" 
set $ws2 "2" 
set $ws3 "3" 
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"

workspace $ws1 output eDP
workspace $ws2 output eDP
workspace $ws3 output eDP
workspace $ws4 output HDMI-A-0 eDP
workspace $ws5 output HDMI-A-0 eDP
workspace $ws6 output HDMI-A-0 eDP

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6

bar {
  i3bar_command i3bar
  position top 
  tray_output primary
  tray_padding 5
  font pango:JetBrainsMono Nerd Font 10 
# strip_workspace_numbers no
  padding 0px 5px 0px 0px 

  status_command i3blocks
  colors {
   background #282828
   statusline #ebdbb2
   separator  #83a598

   focused_workspace   #282828 #98971a #3c3836
   active_workspace    #282828 #98971a #8FBCBB
   inactive_workspace  #282828 #98971a #fbf1c7
   urgent_workspace    #282828 #98971a #BF616A
   binding_mode        #282828 #98971a #BF616A
  }
}

# reload the configuration file
bindsym $mod+Shift+p reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

bindsym $mod+Ctrl+l resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+k resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+j resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+h resize grow width 10 px or 10 ppt
    
# Window color settings
# class                 border  backgr. text    indicator
client.focused          #4c566a #98971a #d8dee9 #98971a
client.unfocused        #4c566a #98971a #2e3440 #98971a
client.focused_inactive #4c566a #98971a #2e3440 #98971a
client.placeholder      #4c566a #2e3440 #4c566a #98971a
client.urgent           #4c566a #BF616A #d8dee9

client.background       #1e1e2e
exec_always feh --bg-fill ~/Pictures/Wallpapers/catalina_dark.jpg
exec_always autotiling
exec_always picom --animations -b
exec_always xrandr --output HDMI-A-0 --mode 1920x1080 --rate 120.0 --right-of eDP 
